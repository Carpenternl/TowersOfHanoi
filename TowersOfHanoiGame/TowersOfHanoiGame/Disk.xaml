<UserControl x:Class="TowersOfHanoiGame.Disk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TowersOfHanoiGame"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftCol"/>
            <ColumnDefinition x:Name="c"/>
            <ColumnDefinition x:Name="RightCol" />
        </Grid.ColumnDefinitions>
        <Label x:Name="WeightDisp" Grid.Column="1" BorderBrush="Black"  BorderThickness="2" Content="X" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
